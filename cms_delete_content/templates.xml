<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="delete_confirm" name="CMS default delete confirm">
        <t t-call="website.layout">
            <div class="container delete_confirm">
                <section class="text-center">
                    <h2>Are you sure you want to delete this item?</h2>
                    <form t-att-action="delete_url" method="POST">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <button type="submit" name="confirm"
                                class="btn btn-danger" title="Click here to delete this item" value="confirm">Confirm</button>
                    </form>
                    <a class="btn btn-default" title="Cancel" t-att-href="cancel_delete_url">
                        Cancel
                    </a>
                </section>
            </div>
        </t>
    </template>


</odoo>
